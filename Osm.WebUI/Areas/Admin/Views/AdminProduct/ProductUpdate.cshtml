@using Osm.WebUI.Models;
@model Root
@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <!-- Main content starts -->
        <div>
            <!-- Row Starts -->
            <div class="row">
                <div class="col-sm-12 p-0">
                    <div class="main-header">
                        <h4>Ürün Detay</h4>
                    </div>
                </div>
            </div>
            <!-- Row end -->
            <!-- Row start -->
            <!-- Form Control starts -->
            <!-- Form Control ends -->
            <!-- Textual inputs starts -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text">Ürün Güncelleme</h5>
                    </div>

                    <!-- end of modal -->
                    <div class="card-block">


                        <form enctype="multipart/form-data" class="row" method="post" action="adminekipmanguncelle">
                            <div class="col-lg-3">
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">İsim</label></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m=>m.data.name, new { @class = "form-control" })
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Kategori</label></div>
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(m => m.data.categoryID,
                                        new List<SelectListItem>
                                        {
                                        new SelectListItem {
                                        Text="Temizleme",
                                        Value="1",

                                        },
                                        new SelectListItem {
                                        Text="Öğütme",
                                        Value="2"

                                        },
                                        new SelectListItem {
                                        Text="Taşıma",
                                        Value="3",

                                        },
                                        new SelectListItem {
                                        Text="Paketleme",
                                        Value="5",

                                        },
                                        new SelectListItem {
                                        Text="Depolama",
                                        Value="4",

                                        },
                                        new SelectListItem {
                                        Text="Yem",
                                        Value="6",

                                        },
                                        new SelectListItem {
                                        Text="Montaj",
                                        Value="7",

                                        },

                                        }, new { @class = "form-control", @name = "Category" })
                                    </div>


                                </div>

                                @*<input hidden name="Category" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="@item.Category">*@



                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Açıklama</label></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.data.description, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">İngilizce Açıklama</label></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.data.descriptionEn, new { @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Resim</label></div>
                                    <div class="col-md-8">
                                        <input type="file" name="imageFile" value="" />
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <button type="submit" value="CompanyUpdate" name="ButtonUpdate" class="btn btn-outline-success">
                                        Güncelle
                                    </button>
                                </div>


                                @Html.HiddenFor(m => m.data.id, new { @class = "form-control" })
@*                                <label name="ProductID" hidden>@Model.data.id</label>
*@
                            </div>
                            <div class="col-lg-3">
                            </div>
                        </form>
                        <br />
                        <br />
                        <form enctype="multipart/form-data" class="row" method="post" action="">
                            <div class="col-md-">
                                <div class="card">
                                    <div class="card-block">
                                        <div class="row">
                                            @foreach (var item in Model.data.images)
                                            {
                                                <div class="col-xl-2 col-lg-3 col-sm-3 col-xs-12">
                                                    <img width="225" height="225" src="~/@item.image" alt="">
                                                    @*<textbox id="imageid" value="@item.ID">@item.ID</textbox>*@
                                                    @*<button id="idbutton" class="btn btn-outline-danger">Sil</button>*@
                                                    <a class="btn btn-outline-danger" href="javascript:;" id="@item.id">Sil</a>
                                                    @*<button type="button" onclick="ButtonClick();"> Call &raquo;</button>*@
                                                </div>

                                            }
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>



                </div>

            </div>



        </div>

    </div>

</div>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(".btn-outline-danger").click(function (e) {
        debugger;
        var id = e.currentTarget.id;
        $.ajax({
            type: "POST",
            url: "/ekipmanresimsil/" + id,

            success: function (response) {
                alert("Ürün Resmi Başarıyla Silindi.");


            },

            error: function (response) {
                alert("Ürün Resmi Silinemedi.");

            }
        });
        $(this).parent('div').remove();
    });
</script>