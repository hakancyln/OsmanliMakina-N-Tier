@using Osm.WebUI.Areas.Admin.Models;
@model MessageRoot
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <!-- Main content starts -->
        <div>
            <!-- Row Starts -->
            <div class="row">
                <div class="col-sm-12 p-0">
                    <div class="main-header">
                        <h4>Mesaj Detay</h4>
                    </div>
                </div>
            </div>
            <!-- Row end -->
            <!-- Row start -->
            <!-- Form Control starts -->
            <!-- Form Control ends -->
            <!-- Textual inputs starts -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text"></h5>
                    </div>



                    <div class="card-block">


                        <form enctype="multipart/form-data" class="row" method="post" action="">
                            <div class="col-lg-3">
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Müşeti İsmi</label></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.data.Name, new { @class = "form-control", @readonly = "readonly" })
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Müşteri Telefonu</label></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.data.Tel, new { @class = "form-control", @readonly = "readonly" })
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Konu</label></div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.data.Subject, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4"><label class="col-form-label f-w-600">Mesaj</label></div>
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(m => m.data.Messages, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                            </div>
                        </form>



                    </div>

                </div>

            </div>



        </div>

    </div>

</div>