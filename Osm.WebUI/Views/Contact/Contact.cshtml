@model List<FooterItem>
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="breadcrumbs d-flex align-items-center" style="background-image: url('/img/contact-header.jpg');">
    <div class="container position-relative d-flex flex-column align-items-center">

        <h2>İletişim</h2>
        <ol>
            <li><a href="http://localhost:5274">Ana Sayfa</a></li>
            <li>İletişim</li>
        </ol>

    </div>
</div>
<section id="contact" class="contact">
    <div class="container position-relative" data-aos="fade-up">

        <div class="row gy-4 d-flex justify-content-end">

            <div class="col-lg-5" data-aos="fade-up" data-aos-delay="100">
                @foreach (var item in Model)
                {
                    <div class="info-item d-flex">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h4>Adres:</h4>
                            <p>@item.Adress</p>
                        </div>
                    </div>

                    <!-- End Info Item -->

                    <div class="info-item d-flex">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h4>Email:</h4>
                            <p>@item.Mail1</p>
                            <p>@item.Mail2</p>
                        </div>
                    </div>

                    <!-- End Info Item -->

                    <div class="info-item d-flex">
                        <i class="bi bi-phone flex-shrink-0"></i>
                        <div>
                            <h4>Telefon:</h4>
                            <p>@item.Tel</p>
                            <p>@item.Fax (Fax)</p>
                        </div>
                    </div>

                    <!-- End Info Item -->
                }
            </div>

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="250">

                <form enctype="multipart/form-data" class="row" method="post" action="iletisim">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="Name" class="form-control" id="name" placeholder="İsim" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input maxlength="10" type="tel" class="form-control" name="Tel" id="email" placeholder="Telefon" required>
                            <small>*Telefon numaranızı başında 0 olmadan giriniz.</small>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="subject" id="subject" placeholder="Konu" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" name="Messages" rows="5" placeholder="Mesaj" required></textarea>
                    </div>
                    <br />
                    <br />
                    <div class="text-center">
                        <br />

                        <button type="submit" value="CompanyUpdate" name="ButtonUpdate" class="btn btn-info">
                            Gönder
                        </button>
                    </div>

                </form>

            </div><!-- End Contact Form -->

        </div>

    </div>
</section>